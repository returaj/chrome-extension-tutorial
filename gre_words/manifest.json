{
    "manifest_version": 2,
    "name": "GreoWrodDetector",
    "description": "This is a gre word detector extension",
    "version": "1.0",

    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "16": "icons/icon16.png"
    },

    "background": {
        "scripts": [ "data.js", "background.js" ],
        "persistent": true
    },

    "content_scripts": [
        {
            "matches": [ "<all_urls>" ],
            "js": [ "jquery.js", "content.js" ]
        }
    ],

    "browser_action": {
        "default_icon": "icons/icon16.png"
    },

    "permissions": [
        "tabs",
        "contextMenus"
    ]
}
